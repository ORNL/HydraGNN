{
    "Verbosity": {
        "level": 0
    },
    "Dataset": {
        "name": "FePt_32atoms",
        "path": {"raw": {"total": "FePt"}},
        "format": "LSMS",
        "num_nodes": 32,
        "variable_size": false,
        "node_features": {
            "name": ["num_of_protons","charge_density", "magnetic_moment"],
            "dim": [1,1,1],
            "column_index": [0,5,6]
        },
        "graph_features":{
            "name": [ "free_energy"],
            "dim": [1],
            "column_index": [0]
        }
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "PNA",
            "radius": 7,
            "max_neighbours": 5,
            "hidden_dim": 5,
            "num_conv_layers": 6,
            "output_heads": {
                "graph":{
                    "num_sharedlayers": 2,
                    "dim_sharedlayers": 5,
                    "num_headlayers": 2,
                    "dim_headlayers": [50,25]
                },
                "node": {
                    "num_headlayers": 2,
                    "dim_headlayers": [50,25]
                }
            },
            "task_weights": [1.0, 1.0, 1.0]
        },
        "Variables_of_interest": {
            "input_node_features": [0],
            "output_names": ["free_energy","charge_density", "magnetic_moment"],
            "output_index": [0, 1, 2],
            "type": ["graph","node","node"],
            "denormalize_output": true
        },
        "Training": {
            "num_epoch": 20,
            "perc_train": 0.7,
            "learning_rate": 1e-3,
            "batch_size": 64,
            "continue": 0,
            "startfrom": "existing_model"
        }
    }
}
