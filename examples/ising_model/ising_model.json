{
    "Verbosity": {
        "level": 2
    },
    "Dataset": {
        "name": "ising_model_27atoms",
        "path": {"total": "./dataset/ising_model"},
        "format": "unit_test",
        "node_features": {
            "name": ["atom_type","spin"],
            "dim": [1,1],
            "column_index": [0,4]
        },
        "graph_features":{
            "name": [ "total_energy"],
            "dim": [1],
            "column_index": [0]
        },
        "compositional_stratified_splitting": false,
        "rotational_invariance": false
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "PNA",
            "radius": 7,
            "max_neighbours": 100000,
            "hidden_dim": 20,
            "num_conv_layers": 6,
            "output_heads": {
                "graph":{
                    "num_sharedlayers": 2,
                    "dim_sharedlayers": 5,
                    "num_headlayers": 2,
                    "dim_headlayers": [50,25]
                },
                "node": {
                    "num_headlayers": 2,
                    "dim_headlayers": [50,25],
                    "type": "mlp"
                }
            },
            "task_weights": [1.0, 1.0],
            "periodic_boundary_conditions": false
        },
        "Variables_of_interest": {
            "input_node_features": [0],
            "output_names": ["total_energy","spin"],
            "output_index": [0, 1],
            "type": ["graph","node"],
            "denormalize_output": true
        },
        "Training": {
            "num_epoch": 2,
            "perc_train": 0.7,
            "loss_function_type": "mse",
            "batch_size": 64,
            "continue": false,
            "Optimizer": {
                "type": "AdamW",
                "learning_rate": 1e-3
            }
        }
    },
    "Visualization": {
        "plot_init_solution": true,
        "plot_hist_solution": false,
        "create_plots": true
    }
}
